{
    "name": "aphiria/net",
    "description": "The Aphiria network library",
    "keywords": [
        "PHP",
        "network",
        "http",
        "request",
        "response",
        "cookie"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\Net\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Net\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/collections": "0.*@dev",
        "aphiria/io": "0.*@dev",
        "aphiria/reflection": "0.*@dev",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.4"
    },
    "scripts": {
        "phpcs-test": "@phpcs-fix --dry-run",
        "phpcs-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff",
        "phpunit": "php vendor/phpunit/phpunit/phpunit --coverage-clover ./.coverage/clover.xml --verbose",
        "test": [
            "@phpunit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
