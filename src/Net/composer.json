{
  "name": "aphiria/net",
  "description": "The Aphiria network library",
  "keywords": [
    "PHP",
    "network",
    "http",
    "request",
    "response",
    "cookie"
  ],
  "authors": [
    {
      "name": "David Young",
      "email": "dave@aphiria.com",
      "role": "Architect"
    }
  ],
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Aphiria\\Net\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Aphiria\\Net\\Tests\\": "tests"
    }
  },
  "require": {
    "aphiria/collections": "1.0.*@dev",
    "aphiria/io": "1.0.*@dev",
    "aphiria/serialization": "1.0.*@dev",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "php": "^7.4"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpunit/phpunit": "~8.0"
  },
  "scripts": {
    "lint-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run",
    "lint-fix": "php-cs-fixer fix --config=.php_cs -v --diff"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "minimum-stability": "dev"
}
