{
    "name": "aphiria/net",
    "description": "The Aphiria network library",
    "keywords": [
        "PHP",
        "network",
        "http",
        "request",
        "response",
        "cookie"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\Net\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Net\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/collections": "0.*@dev",
        "aphiria/io": "0.*@dev",
        "aphiria/reflection": "0.*@dev",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "~9.4"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs.dist -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
