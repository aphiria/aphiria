{
    "name": "aphiria/psr-adapters",
    "description": "The Aphiria PSR adapter library",
    "keywords": [
        "PHP",
        "adapter",
        "psr-7",
        "psr-11"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\PsrAdapters\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\PsrAdapters\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/dependency-injection": "0.*@dev",
        "aphiria/net": "0.*@dev",
        "php": "^7.4",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "nyholm/psr7": "^1.2",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "~9.3"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs.dist -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
