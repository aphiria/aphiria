{
    "name": "aphiria/console",
    "description": "The Aphiria console library",
    "keywords": [
        "PHP",
        "console",
        "cli"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\Console\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Console\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/dependency-injection": "1.0.*@dev",
        "aphiria/reflection": "1.0.*@dev",
        "doctrine/annotations": "2.0.*@dev",
        "opis/closure": "3.5.*",
        "php": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs -v --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
