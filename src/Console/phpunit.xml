<phpunit
    bootstrap="phpunit.bootstrap.php"
    colors="true">
    <testsuite name="Console">
        <directory>tests</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./.coverage"/>
    </logging>
</phpunit>
