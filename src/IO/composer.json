{
    "name": "aphiria/io",
    "description": "The Aphiria input/output library",
    "keywords": [
        "PHP",
        "io",
        "input output",
        "streams",
        "files"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\IO\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\IO\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "~9.4"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs.dist -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
