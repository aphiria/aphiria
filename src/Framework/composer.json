{
    "name": "aphiria/framework",
    "description": "The library that ties together multiple Aphiria libraries",
    "keywords": [
        "PHP",
        "Aphiria",
        "configuration"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\Framework\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Framework\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/aphiria": "1.0.*@dev",
        "php": "^7.4",
        "psr/log": "~1.0",
        "symfony/dotenv": "~5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "~9.0"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs -v --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
