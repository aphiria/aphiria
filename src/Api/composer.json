{
    "name": "aphiria/api",
    "description": "The Aphiria API library",
    "keywords": [
        "PHP",
        "API",
        "controller"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Api\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/content-negotiation": "0.*@dev",
        "aphiria/dependency-injection": "0.*@dev",
        "aphiria/middleware": "0.*@dev",
        "aphiria/router": "0.*@dev",
        "aphiria/validation": "0.*@dev",
        "monolog/monolog": "~2.0",
        "php": ">=8.0",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.5"
    },
    "scripts": {
        "phpcs-test": "@phpcs-fix --dry-run",
        "phpcs-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff",
        "phpunit": "php vendor/phpunit/phpunit/phpunit --coverage-clover ./.coverage/clover.xml --verbose",
        "test": [
            "@phpunit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
