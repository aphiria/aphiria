{
    "name": "aphiria/api",
    "description": "The Aphiria API library",
    "keywords": [
        "PHP",
        "API",
        "controller"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Api\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/content-negotiation": "1.0.*@dev",
        "aphiria/dependency-injection": "1.0.*@dev",
        "aphiria/middleware": "0.*@dev",
        "aphiria/router": "0.*@dev",
        "aphiria/validation": "0.*@dev",
        "monolog/monolog": "~2.0",
        "php": "^7.4",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "~9.1"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs.dist -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
