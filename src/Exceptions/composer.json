{
    "name": "aphiria/exceptions",
    "description": "The Aphiria exception library",
    "keywords": [
        "PHP",
        "exceptions",
        "exception handling"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\Exceptions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Exceptions\\Tests\\": "tests"
        }
    },
    "require": {
        "monolog/monolog": "~2.0",
        "php": ">=8.0",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.4"
    },
    "scripts": {
        "phpcs-test": "@phpcs-fix --dry-run",
        "phpcs-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff",
        "phpunit": "php vendor/phpunit/phpunit/phpunit --coverage-clover ./.coverage/clover.xml --verbose",
        "test": [
            "@phpunit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
