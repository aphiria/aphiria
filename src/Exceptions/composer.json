{
    "name": "aphiria/exceptions",
    "description": "The Aphiria exception library",
    "keywords": [
        "PHP",
        "exceptions",
        "exception handling"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\Exceptions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Exceptions\\Tests\\": "tests"
        }
    },
    "require": {
        "monolog/monolog": "~2.0",
        "php": "^7.4",
        "psr/log": "~1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "~9.3"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs.dist -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
