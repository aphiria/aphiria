{
    "name": "aphiria/router",
    "description": "The Aphiria router library",
    "keywords": [
        "PHP",
        "router",
        "routing",
        "matching"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\Routing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Routing\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/reflection": "0.*@dev",
        "ext-ctype": "*",
        "ext-mbstring": "*",
        "php": "^8.0"
    },
    "require-dev": {
        "aphiria/api": "0.*@dev",
        "nikic/fast-route": "1.2",
        "phpunit/phpunit": "~9.4",
        "symfony/routing": "4.2.*"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs.dist -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
