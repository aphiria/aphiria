{
    "name": "aphiria/console-command-annotations",
    "description": "The Aphiria console command annotation library",
    "keywords": [
        "PHP",
        "console",
        "command",
        "annotations"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\ConsoleCommandAnnotations\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\ConsoleCommandAnnotations\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/console": "1.0.*@dev",
        "aphiria/dependency-injection": "1.0.*@dev",
        "aphiria/reflection": "1.0.*@dev",
        "doctrine/annotations": "2.0.*@dev",
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "~8.0"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs -v --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
