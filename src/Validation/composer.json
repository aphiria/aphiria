{
    "name": "aphiria/validation",
    "description": "The Aphiria validation library",
    "keywords": [
        "PHP",
        "validation",
        "constraints"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\Validation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Validation\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/reflection": "0.*@dev",
        "doctrine/annotations": "1.10.*@dev",
        "ext-intl": "*",
        "php": ">=7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "~9.3"
    },
    "scripts": {
        "lint-check": "php-cs-fixer fix --config=.php_cs.dist -v --diff --dry-run",
        "lint-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
