{
    "name": "aphiria/validation",
    "description": "The Aphiria validation library",
    "keywords": [
        "PHP",
        "validation",
        "constraints"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aphiria\\Validation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Validation\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/reflection": "0.*@dev",
        "ext-intl": "*",
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.4"
    },
    "scripts": {
        "phpcs-test": "@phpcs-fix --dry-run",
        "phpcs-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff",
        "phpunit": "php vendor/phpunit/phpunit/phpunit --coverage-clover ./.coverage/clover.xml --verbose",
        "test": [
            "@phpunit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "minimum-stability": "dev"
}
