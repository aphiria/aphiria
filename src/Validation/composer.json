{
    "name": "aphiria/validation",
    "description": "The Aphiria validation library",
    "keywords": [
        "PHP",
        "validation",
        "constraints"
    ],
    "authors": [
        {
            "name": "David Young",
            "email": "dave@aphiria.com",
            "role": "Architect"
        }
    ],
    "homepage": "https://www.aphiria.com",
    "license": "MIT",
    "support": {
        "docs": "https://www.aphiria.com/docs/0.x/introduction.html",
        "forum": "https://github.com/aphiria/aphiria/discussions",
        "issues": "https://github.com/aphiria/aphiria/issues",
        "source": "https://github.com/aphiria/aphiria"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/davidbyoung"
        }
    ],
    "autoload": {
        "psr-4": {
            "Aphiria\\Validation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aphiria\\Validation\\Tests\\": "tests"
        }
    },
    "require": {
        "aphiria/reflection": "0.*@dev",
        "ext-intl": "*",
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.5"
    },
    "scripts": {
        "phpcs-test": "@phpcs-fix --dry-run",
        "phpcs-fix": "php-cs-fixer fix --config=.php_cs.dist -v --diff",
        "phpunit": "php vendor/phpunit/phpunit/phpunit --coverage-clover ./.coverage/clover.xml --verbose",
        "test": [
            "@phpunit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
